<!DOCTYPE html>
<html>
<head>
	<title>userlist</title>
</head>
<body>
	<h1>User List</h1>

	<a href="/home">Back</a> |
	<a href="/logout">logout</a>

<br><br>
	<table border="1">
		<tr>
			<td>ID</td>
			<td>USERNAME</td>
			<td>PASSWORD</td>
			<td>ACTION</td>
		</tr>

	<% for(var i=0; i< employer.length; i++){ %>
		<tr>
			<td><%= employer[i].id %></td>
			<td><%= employer[i].username %></td>
			<td><%= employer[i].password %></td>
			<td>
				<a href="/employer/edit/<%= employer[i].id %>"> EDIT </a> | 
				<a href="/employer/delete/<%= employer[i].id %>"> DELETE </a> | 
				<a href="/employer/details/<%= employer[i].id %>"> Details </a>
			</td>
		</tr>

	<% } %>
	</table>
</body>
</html>